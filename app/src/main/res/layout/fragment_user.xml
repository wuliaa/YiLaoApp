<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.example.yilaoapp.ui.mine.MineViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.mine.UserFragment">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/view"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:background="@color/div_white"
                        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?attr/colorPrimary"
                        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                    </androidx.appcompat.widget.Toolbar>

                    <TextView
                        android:id="@+id/biaoti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/sign"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/toolbar" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/user_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.0" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/user_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.0" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/user_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.36" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/user_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.39" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/user_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.41" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/user_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.51" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/user_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.6" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/user_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.71" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/user_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.73" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/user_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.86" />

                    <com.github.siyamed.shapeimageview.CircularImageView
                        android:id="@+id/user_image2"
                        android:layout_width="82dp"
                        android:layout_height="73dp"
                        android:contentDescription="@string/Avatar"
                        android:src="@drawable/touxiang"
                        app:layout_constraintBottom_toTopOf="@+id/user_4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/toolbar" />


                    <TextView
                        android:id="@+id/user_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zj"
                        app:layout_constraintBottom_toTopOf="@+id/user_5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/user_4" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/user_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.11" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/user_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.12" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/user_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.36" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/user_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.89" />

                    <EditText
                        android:id="@+id/user_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_person_24"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="@string/nickname"
                        android:inputType="textPersonName"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="18sp"
                        android:theme="@style/MyEditText"
                        app:layout_constraintBottom_toTopOf="@+id/user_7"
                        app:layout_constraintEnd_toStartOf="@+id/user_15"
                        app:layout_constraintStart_toStartOf="@+id/user_12"
                        app:layout_constraintTop_toTopOf="@+id/user_6" />

                    <EditText
                        android:id="@+id/user_school"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_school_24"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:hint="@string/sc"
                        android:inputType="textPersonName"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="18sp"
                        android:theme="@style/MyEditText"
                        app:layout_constraintBottom_toTopOf="@+id/user_9"
                        app:layout_constraintEnd_toStartOf="@+id/user_15"
                        app:layout_constraintStart_toStartOf="@+id/user_12"
                        app:layout_constraintTop_toTopOf="@+id/user_8" />

                    <Button
                        android:id="@+id/user_xyb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_deepen"
                        android:text="@string/xyb"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/user_11"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/user_10" />

                    <Switch
                        android:id="@+id/user_switch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_baseline_wc_24"
                        android:drawablePadding="5dp"
                        android:showText="true"
                        android:switchMinWidth="60dp"
                        android:switchPadding="50dp"
                        android:switchTextAppearance="@style/swb"
                        android:textOff="@string/boy"
                        android:textOn="@string/gir"
                        android:theme="@style/MySwitch"
                        app:layout_constraintBottom_toTopOf="@+id/user_school"
                        app:layout_constraintStart_toStartOf="@+id/user_13"
                        app:layout_constraintTop_toBottomOf="@+id/user_name" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</layout>