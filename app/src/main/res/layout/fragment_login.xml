<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.example.yilaoapp.ui.mine.MineViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.mine.LoginFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/login_guideline1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.88" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/login_guideline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.10462287" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/login_guideline4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.2" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/login_guideline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.35" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/login_guideline7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.25" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/login_guideline8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.4" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/login_guideline9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.5" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/login_guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.55" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/login_guideline11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.7" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/login_guideline5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="1.0" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/login_guideline13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.10462287" />

                    <TextView
                        android:id="@+id/login_textview1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wjmm"
                        android:textColor="@color/black0"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/login_guideline5"
                        app:layout_constraintEnd_toStartOf="@+id/login_textview2"
                        app:layout_constraintHorizontal_bias="0.39"
                        app:layout_constraintStart_toStartOf="@+id/login_guideline2"
                        app:layout_constraintTop_toTopOf="@+id/login_guideline11"
                        app:layout_constraintVertical_bias="0.16000003" />

                    <TextView
                        android:id="@+id/login_textview2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="48dp"
                        android:text="@string/yhzc"
                        android:textColor="@color/black0"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/login_guideline5"
                        app:layout_constraintEnd_toStartOf="@+id/login_guideline1"
                        app:layout_constraintTop_toTopOf="@+id/login_guideline11"
                        app:layout_constraintVertical_bias="0.16000003" />

                    <com.github.florent37.materialtextfield.MaterialTextField
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintBottom_toTopOf="@+id/login_guideline7"
                        app:layout_constraintEnd_toStartOf="@+id/login_guideline1"
                        app:layout_constraintStart_toStartOf="@+id/login_guideline2"
                        app:layout_constraintTop_toTopOf="@+id/login_guideline6"
                        app:mtf_backgroundColor="@color/fbutton_color_nephritis"
                        app:mtf_labelColor="#666">

                        <EditText
                            android:layout_width="227dp"
                            android:layout_height="49dp"
                            android:id="@+id/loginEdittext"
                            android:hint="@string/qslzh"
                            android:inputType="number"
                            android:textColor="@color/fbutton_color_clouds"
                            android:textCursorDrawable="@drawable/login_cursor_color"
                            android:textSize="16sp" />

                    </com.github.florent37.materialtextfield.MaterialTextField>

                    <com.github.florent37.materialtextfield.MaterialTextField
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintBottom_toTopOf="@+id/login_guideline9"
                        app:layout_constraintEnd_toStartOf="@+id/login_guideline1"
                        app:layout_constraintStart_toStartOf="@+id/login_guideline2"
                        app:layout_constraintTop_toTopOf="@+id/login_guideline8"
                        app:mtf_backgroundColor="@color/fbutton_color_clouds"
                        app:mtf_labelColor="#666">

                        <EditText
                            android:layout_width="227dp"
                            android:layout_height="49dp"
                            android:hint="@string/qsrmm"
                            android:id="@+id/loginEdittext1"
                            android:inputType="textPassword"
                            android:textColor="@color/fbutton_color_nephritis"
                            android:textCursorDrawable="@drawable/login_cursor_color_2"
                            android:textSize="16sp" />

                    </com.github.florent37.materialtextfield.MaterialTextField>

                    <ImageView
                        android:id="@+id/login_imageview1"
                        android:layout_width="118dp"
                        android:layout_height="75dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/login_1"
                        app:layout_constraintBottom_toTopOf="@+id/login_guideline11"
                        app:layout_constraintEnd_toStartOf="@+id/login_guideline1"
                        app:layout_constraintStart_toStartOf="@+id/login_guideline2"
                        app:layout_constraintTop_toTopOf="@+id/login_guideline" />

                    <ImageView
                        android:id="@+id/login_imageview2"
                        android:layout_width="197dp"
                        android:layout_height="113dp"
                        android:layout_marginTop="24dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/login_2"
                        app:layout_constraintBottom_toTopOf="@+id/login_guideline4"
                        app:layout_constraintEnd_toStartOf="@+id/login_guideline1"
                        app:layout_constraintHorizontal_bias="0.484"
                        app:layout_constraintStart_toStartOf="@+id/login_guideline2"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>


    </FrameLayout>
</layout>